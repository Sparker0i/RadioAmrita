<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:id="@+id/album_art"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="90.0dip">

        <android.support.v7.widget.CardView
            android:layout_gravity="center|top"
            android:clipToPadding="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4.0dip"
            card_view:cardBackgroundColor="#ff313536"
            card_view:cardCornerRadius="8.0dip"
            card_view:cardElevation="12.0dip"
            card_view:cardUseCompatPadding="true">

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <ImageView
                    android:contentDescription="@string/app_name"
                    android:layout_gravity="center"
                    android:id="@+id/imageView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logo" />
            </FrameLayout>
        </android.support.v7.widget.CardView>
    </FrameLayout>

    <android.support.v7.widget.CardView
        android:layout_gravity="center|top"
        android:clipToPadding="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        card_view:cardElevation="12.0dip">

        <TableRow
            android:gravity="bottom"
            android:layout_gravity="bottom|center"
            android:id="@+id/bottom_bar"
            android:background="#ff212121"
            android:padding="@dimen/margin_player"
            android:paddingBottom="2.0dip"
            android:layout_width="fill_parent"
            android:layout_height="70.0dip"
            android:layout_alignParentBottom="true"
            android:translationZ="10.0dip"
            tools:targetApi="LOLLIPOP">

            <Button
                android:layout_gravity="center"
                android:id="@+id/play"
                android:contentDescription="@string/play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="fill_parent"
                android:layout_marginStart="8.0dip"
                android:layout_marginLeft="8.0dip"
                android:layout_weight="3.0">

                <TextView
                    android:textSize="18.0sp"
                    android:ellipsize="marquee"
                    android:id="@+id/album_title"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:scrollHorizontally="true"
                    android:maxLines="1"
                    android:marqueeRepeatLimit="marquee_forever" />

                <TextView
                    android:textSize="14.0sp"
                    android:id="@+id/album_artist"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="" />
            </LinearLayout>

            <Chronometer
                android:textSize="24.0sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/chronometer"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="10.0dip" />
        </TableRow>
    </android.support.v7.widget.CardView>
</RelativeLayout>